{
    "name": "giveaways",
    "version": "2.0.0",
    "description": "A feature dense Discord Giveaways bot ðŸŽ‰",
    "main": "dist/index.js",
    "scripts": {
        "build": "pnpm run cleardir && pnpm run compile",
        "cleardir": "rimraf dist/*",
        "compile": "tsc",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --fix --ext .ts",
        "pre-commit": "pnpm run lint && pnpm run build",
        "start": "pnpm run build && node ."
    },
    "author": "Carter Himmel <fyko@sycer.dev>",
    "license": "GPL-3.0",
    "dependencies": {
        "@naval-base/ms": "^3.1.0",
        "body-parser": "^1.19.0",
        "common-tags": "^1.8.0",
        "discord-akairo": "github:discord-akairo/discord-akairo",
        "discord.js": "github:discordjs/discord.js#master",
        "express": "^4.17.1",
        "helmet": "^3.22.0",
        "kurasuta": "^2.0.0",
        "moment": "^2.24.0",
        "moment-duration-format": "^2.3.2",
        "mongoose": "^5.9.9",
        "node-emoji": "^1.10.0",
        "node-fetch": "^2.6.0",
        "pretty-ms": "^6.0.1",
        "prom-client": "^12.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-angular": "^8.3.4",
        "@types/body-parser": "^1.19.0",
        "@types/common-tags": "^1.8.0",
        "@types/express": "^4.17.6",
        "@types/helmet": "^0.0.45",
        "@types/moment-duration-format": "^2.2.2",
        "@types/mongoose": "^5.7.11",
        "@types/ms": "^0.7.31",
        "@types/node": "^13.11.1",
        "@types/node-emoji": "^1.8.1",
        "@types/node-fetch": "^2.5.6",
        "@types/ws": "^7.2.4",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "eslint": "^6.8.0",
        "eslint-config-marine": "^6.0.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "tslib": "^1.11.1",
        "typescript": "^3.8.3",
        "winston": "^3.2.1"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.1",
        "erlpack": "github:discordapp/erlpack",
        "utf-8-validate": "^5.0.2",
        "zlib-sync": "^0.1.6"
    },
    "eslintConfig": {
        "extends": "marine/prettier/node",
        "rules": {
            "comma-dangle": [
                "error",
                "always-multiline"
            ]
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-angular"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test"
                ]
            ]
        }
    }
}
