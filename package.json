	"version": "2.2.0",
	"description": "A feature dense Discord Giveaways bot ðŸŽ‰",
	"main": "dist/index.js",
	"scripts": {
		"preinstall": "npx only-allow npm",
		"postinstall": "husky install",
		"build": "rimraf dist/* && tsc",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --fix --ext .ts --debug",
		"pre-commit": "npm run lint && npm run build",
		"prestart": "npm run build",
		"start": "node ."
	},
	"author": "Carter Himmel <fyko@sycer.dev>",
	"license": "MIT",
	"dependencies": {
		"@naval-base/ms": "^3.1.0",
		"common-tags": "^1.8.0",
		"discord-akairo": "^8.1.0",
		"discord.js": "^12.5.1",
		"fastify": "^3.12.0",
		"fastify-helmet": "^5.2.0",
		"ioredis": "^4.22.0",
		"kurasuta": "^2.2.3",
		"moment": "^2.29.1",
		"moment-duration-format": "^2.3.2",
		"node-emoji": "^1.10.0",
		"node-fetch": "^2.6.1",
		"pg": "^8.5.1",
		"pretty-ms": "^7.0.1",
		"prom-client": "github:siimon/prom-client#4e6aacd4921a3791e8f01ac6ab2fd6bb421b0dc0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.31",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.0.0",
		"@commitlint/config-angular": "^12.0.0",
		"@types/common-tags": "^1.8.0",
		"@types/eslint": "^7.2.6",
		"@types/ioredis": "^4.19.4",
		"@types/moment-duration-format": "^2.2.2",
		"@types/ms": "^0.7.31",
		"@types/node": "^14.14.27",
		"@types/node-emoji": "^1.8.1",
		"@types/node-fetch": "^2.5.8",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^4.15.0",
		"@typescript-eslint/parser": "^4.15.0",
		"eslint": "^7.20.0",
		"eslint-config-marine": "^8.1.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^5.0.9",
		"lint-staged": "^13.0.0",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"tslib": "^2.1.0",
		"typescript": "^4.1.5"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.3",
		"erlpack": "github:discord/erlpack",
		"utf-8-validate": "^5.0.4",
		"zlib-sync": "^0.1.7"
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts",
		"*.{json,yml,yaml}": "prettier --write"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test",
					"types",
					"wip"
				]
			]
		}
	}
}
