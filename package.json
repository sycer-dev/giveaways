{
    "name": "giveaways",
    "version": "2.0.0",
    "description": "A feature dense Discord Giveaways bot ðŸŽ‰",
    "main": "build/giveaways.js",
    "scripts": {
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --fix --ext .ts",
        "cleardir": "rimraf build/*",
        "compile": "tsc",
        "build": "yarn run cleardir && yarn run compile",
        "start": "yarn run build && node ."
    },
    "author": "Carter Himmel <fyko@sycer.dev>",
    "license": "GPL-3.0",
    "dependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-angular": "^8.3.4",
        "common-tags": "^1.8.0",
        "discord-akairo": "github:discord-akairo/discord-akairo",
        "discord.js": "discordjs/discord.js#master",
        "husky": "^4.2.3",
        "moment": "^2.24.0",
        "moment-duration-format": "^2.3.2",
        "mongoose": "^5.9.2",
        "ms": "^2.1.2",
        "new-dblapi": "^2.2.0",
        "node-emoji": "^1.10.0",
        "pretty-ms": "^6.0.0",
        "prom-client": "^12.0.0"
    },
    "devDependencies": {
        "@types/common-tags": "^1.8.0",
        "@types/moment-duration-format": "^2.2.2",
        "@types/mongoose": "^5.7.1",
        "@types/ms": "^0.7.31",
        "@types/node": "^13.7.4",
        "@types/node-emoji": "^1.8.1",
        "@types/ws": "^7.2.1",
        "@typescript-eslint/eslint-plugin": "^2.20.0",
        "@typescript-eslint/parser": "^2.20.0",
        "dotenv": "^8.1.0",
        "eslint": "^6.8.0",
        "eslint-config-marine": "^6.0.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "ts-node": "^8.6.1",
        "typescript": "^3.8.2",
        "winston": "^3.2.1"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.1",
        "erlpack": "discordapp/erlpack",
        "utf-8-validate": "^5.0.2",
        "zlib-sync": "^0.1.6"
    },
    "eslintConfig": {
        "extends": "marine/prettier/node",
        "rules": {
            "comma-dangle": [
                "error",
                "always-multiline"
            ]
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-angular"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test"
                ]
            ]
        }
    }
}
